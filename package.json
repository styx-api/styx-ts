{
  "name": "styx-monorepo",
  "private": true,
  "workspaces": [
    "packages/*",
    "playground"
  ],
  "scripts": {
    "build": "npm run build -w @styx/core",
    "dev": "npm run dev -w playground",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write ."
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "typescript": "^5.6.0",
    "vitest": "^4.0.16"
  }
}
